% customcommands.sty - Custom commands and macros
% Add your own custom commands and shortcuts here
% Note: Math commands are in mathcommands.sty

\ProvidesPackage{styles/customcommands}

% Text formatting shortcuts
\newcommand{\important}[1]{\textbf{\textcolor{red}{#1}}}
\newcommand{\note}[1]{\textit{\textcolor{blue}{Note: #1}}}
\newcommand{\todo}[1]{\textbf{\textcolor{orange}{TODO: #1}}}

% Theorem environments (requires amsthm)
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{corollary}[theorem]{Corollary}

\theoremstyle{definition}
\newtheorem{definition}[theorem]{Definition}
\newtheorem{example}[theorem]{Example}

\theoremstyle{remark}
\newtheorem{remark}[theorem]{Remark}
\newtheorem{notation}[theorem]{Notation}

% Figure and table shortcuts
\newcommand{\figref}[1]{Figure~\ref{fig:#1}}
\newcommand{\tabref}[1]{Table~\ref{tab:#1}}
\newcommand{\eqnref}[1]{Equation~\eqref{eq:#1}}
\newcommand{\secref}[1]{Section~\ref{sec:#1}}

\endinput

